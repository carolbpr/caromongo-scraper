<!--Nav Bar-->
<div id="navbar" class="navbar navbar-expand-lg navbar-dark bg-dark">
    <ul class="nav justify-content-center">
        <li class="nav-item active text-dark">
            <a class="nav-link" href="/"><b>HOME</b><span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/saved">SAVED ARTICLES</a>
        </li>
        <li class="nav-item">
            <button type="button" class="btn btn-primary" id="newScrape">SCRAPE NEW ARTICLES</button>
        </li>
        <li class="nav-item">
            <button type="button" class="btn btn-primary" id="deleteAll">DELETE ARTICLES</button>
        </li>
    </ul>
</div>

<div class="container" style="text-align:center">
    <img src="/assets/img/Logo.png" style="width: 50%;" alt="logo">
    <h1 style="font-family: News Cycle;">Scraped Articles</h1>
    <br><br><hr>
</div>

<!--Homepage-->
<div class="container">
    <div class="col-md-12">
        {{#if articles}}
        {{#each articles}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4><a href={{this.link}} target="_blank">{{this.title}}</a></h4>
            </div>
            <div class="panel-body">
                <p> {{this.summary}}</p>
                <button type="button" class="btn btn-success saveArticle" data-id={{this._id}}>Save Article</button>
                <button type="button" class="btn btn-danger deleteArticle" data-id={{this._id}}>Delete</button>
                <br>
                <hr>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>Uh Oh. Looks like we don't have any new articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>
</div>